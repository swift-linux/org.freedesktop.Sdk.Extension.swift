{
  "app-id": "org.freedesktop.Sdk.Extension.swift.example",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift"
  ],
  "command": "/app/bin/example",
  "modules": [
    {
      "name": "sdk",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "git",
          "path": ".",
          "tag": "HEAD"
        },
        {
          "type": "script",
          "commands": [
            ". /usr/lib/sdk/swift/enable.sh",
            "cd example",
            "swift build -c release",
            "install -Dm 755 .build/release/example /app/bin/example",
            "/usr/lib/sdk/swift/set-runtime.sh /app/lib /app/bin example"
          ],
          "dest-filename": "build-example.sh"
        }
      ],
      "build-commands": [
        "./build-example.sh"
      ]
    }
  ]
}
