{
  "app-id": "org.freedesktop.Sdk.Extension.swift4.live",
  "branch": "1.6",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.swift4"
  ],
  "command": "/app/bin/sdk-run.sh",
  "modules": [
    {
      "name": "sdk",
      "buildsystem": "simple",
      "sources": [
        {
          "type": "script",
          "commands": [
            "if ! [ -d /usr/lib/sdk/swift4 ]; then",
            "  echo 'Swift SDK is missing.'",
            "  exit 1",
            "fi",
            ". /usr/lib/sdk/swift4/enable.sh",
            "[ $# -eq 0 ] && exec sh -i || exec \"$@\""
          ],
          "dest-filename": "sdk-run.sh"
        }
      ],
      "build-commands": [
        "install -Dm 755 sdk-run.sh /app/bin/sdk-run.sh"
      ]
    },
    {
      "name": "appdata",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p ${FLATPAK_DEST}/share/appdata",
        "cp org.freedesktop.Sdk.Extension.swift4.live.appdata.xml ${FLATPAK_DEST}/share/appdata"
      ],
      "sources": [
        {
          "type": "file",
          "path": "org.freedesktop.Sdk.Extension.swift4.live.appdata.xml"
        }
      ]
    }
  ],
  "finish-args": [
    "--filesystem=host",
    "--share=network"
  ]
}
